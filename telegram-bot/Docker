# Use a base image with a Java runtime (e.g., OpenJDK)
FROM adoptopenjdk/openjdk11:latest

# Set the working directory
WORKDIR /app

# Copy the JAR file of your Spring Boot application to the container
COPY target/telegram-bot-0.0.1-SNAPSHOT.jar app.jar

# Expose the port that your Spring Boot application is listening on (e.g., 8080)
EXPOSE 8080

# Define the entry point to start your Spring Boot application
CMD ["java", "-jar", "app.jar"]
